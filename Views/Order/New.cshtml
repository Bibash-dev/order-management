@model StudentOneTOManyRelation.ViewModel.OrderVm

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="container col-6">
    <form asp-controller="Order" asp-action="New" methods="post">

        <div class="card-title">Add order name</div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control">

            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input type="text" asp-for="Price" class="form-control">

            </div>
            <div class="form-group">
                <label asp-for="Product"></label>
                <input type="text" asp-for="Product" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId"></label>
                <select type="text" asp-for="EmployeeId" asp-items="@Model.EmployeeOptions()" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select type="text" asp-for="DepartmentId" asp-items="@Model.DepartmentOptions()" class="form-control"></select>
            </div>

            <button class="btn btn-sm btn-primary" type="submit">Save</button>
        </div>


    </form>
</div>