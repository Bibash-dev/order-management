@model System.Collections.Generic.List<StudentOneTOManyRelation.Entities.Order>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="container-fluid col-6">
    <a asp-controller="Order" asp-action="New" class="btn btn-sm btn-primary">New</a>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
    <tr>
        <th>S.n</th>
        <th>Department</th>
        <th>Employee</th>
        <th>Order</th>
        <th>Product</th>
        <th>Date</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    
    <tbody>
    @{
        var sn = 1;
        foreach (var order in Model)
        {
            <tr>
                <td>@(sn++)</td>
                <td>@order.Department.Name</td>
                <td>@order.Employee.Name</td>
                <td>@order.Name</td>
                <td>@order.Product</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Price</td>
                <td>
                    <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-danger">Delete</a>
                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" class="btn btn-sm btn-dark">Details</a>
                </td>
            </tr>
            
        }
    }
    </tbody>
</table>