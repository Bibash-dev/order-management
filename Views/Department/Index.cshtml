@model System.Collections.Generic.List<StudentOneTOManyRelation.Entities.Department>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}


<div class="container-fluid col-6 mb-2">

    <a asp-controller="Department" asp-action="New" class="btn btn-sm btn-primary">New</a>
</div>
<div class="container-fluid col-6">


    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th>S.n</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
        </thead>

        <tbody>
        @{
            var sn = 1;
            foreach (var department in Model)
            {
                <tr>
                    <td>@(sn++)</td>
                    <td>@department.Name</td>
                    <td>
                        <a asp-controller="Department" asp-action="Edit" asp-route-Id="@department.Id" class="btn-sm btn btn-primary">Edit</a>
                        <a asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-sm btn-dark">Details</a>
                        <a asp-controller="Department" asp-action="Delete" asp-route-Id="@department.Id" class="btn btn-sm btn-danger">Delete</a>

                    </td>
                </tr>
            }
        }
        </tbody>
    </table>

</div>